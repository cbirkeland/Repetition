@model Restaurant
@using RestaurantPluralSight.Models;
<link href="~/main.css" rel="stylesheet" />
<div style="text-align:center">
    <section class="panel panel-default">
        <h3 class="panel-heading">@Model.Name</h3>
        <div class="panel-body">Beställning : @Model.Cuisine</div>

        <div class="panel-footer">
            <a class="btn btn-default" asp-action="Details" asp-route-id="@Model.Id">Detaljer</a>
            <a class="btn btn-default" asp-page="/Restaurants/Edit" asp-route-id="@Model.Id">Ändra</a>
        </div>

    </section>
</div>

